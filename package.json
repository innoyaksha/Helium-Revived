{
  "name": "heliummusic",
  "private": true,
  "version": "0.4.1",
  "main": "background.js",
  "author": "mtrstatic",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "nodemon --exec electron . --watch ./ --ext .html",
    "dist": "vite build && electron-builder -p always"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "dayjs": "^1.11.13",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "electron-win-state": "^1.1.22",
    "fs-extra": "^11.3.0",
    "howler": "^2.2.4",
    "js-cookie": "^3.0.5",
    "js-md5": "^0.8.3",
    "music-metadata": "^11.6.0",
    "nanoid": "^5.1.5",
    "NeteaseCloudMusicApi": "^4.27.0",
    "normalize.css": "^8.0.1",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.4.1",
    "plyr": "^3.7.8",
    "qrcode": "^1.5.4",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1",
    "vue-slider-component": "^4.1.0-beta.6",
    "vue-virtual-scroller": "^2.0.0-beta.8"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "sass": "^1.89.2",
    "vite": "^7.0.2"
  },
  "build": {
    "productName": "Helium Music",
    "appId": "114514",
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "files": [],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "./src/assets/icon/icon.ico",
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "heliummusic",
        "repo": "Helium-Music",
        "releaseType": "draft"
      }
    ]
  }
}
